{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "declaration": true,
    "outDir": "./dist",
    "removeComments": false,
    "esModuleInterop": true,
    "strict": true,
    "strictBindCallApply": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "./play/**/*.ts", "./scripts/**/*.ts"],
  "exclude": ["**/dist", "node_modules"]
}
